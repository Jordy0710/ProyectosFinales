

@using Proyecto.Models;
@model AreaCLS


@{
    ViewBag.Title = "Editar";

    Layout = "~/Views/Shared/_Layout.cshtml";
}









<div class="content-wrapper">




    <!-- SELECT2 EXAMPLE -->
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title"></h3>


        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">

                        <!-- dividir ventana -->

                        @using (Html.BeginForm("Editar", "Area", FormMethod.Post, new { @id = "frmEditar" }))


                        {


                            <div class="form-group">




                                @Html.LabelFor(p => p.idtipo)

                                @Html.TextBoxFor(p => p.idtipo, new { @class = "form-control" })

                                @Html.ValidationMessage("nombre", new { @class = "text-danger" })






                            </div>



                            <div class="form-group">



                                @Html.LabelFor(p => p.nombre)

                                @Html.TextBoxFor(p => p.nombre, new { @class = "form-control" })

                                @Html.ValidationMessage("nombre", new { @class = "text-danger" })










                            </div>



            <!-- /.row -->

                            <div class="box-footer">

                                <input type="submit" class="btn btn-primary value=" Guardar" />

                                @Html.ActionLink("Regresar", "Index", "Area", null, new { @class = "btn btn-danger" })

                            </div>


                            <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>




                        }



                        <!-- /.box-body -->
                        <!-- /.box -->




                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col (right) -->
        </div>
        <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>


    <script>

    var frmEditar = document.getElementById("frmEditar");

    frmEditar.onsubmit = function (e) {

        e.preventDefault();

        if(confirm("¿Deseas Guardar los Cambios") == 1) {

            frmEditar.submit();

        }

    }
    </script>